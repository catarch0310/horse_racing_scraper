import requests
from bs4 import BeautifulSoup
import json
from datetime import datetime

def scrape_hkjc_news():
    # 香港賽馬會賽馬新聞 URL (中文版)
    url = "https://racing.hkjc.com/racing/chinese/racing-info/racing_news.aspx"
    
    headers = {
        "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36"
    }

    response = requests.get(url, headers=headers)
    if response.status_code != 200:
        print("無法連接到馬會網站")
        return []

    soup = BeautifulSoup(response.content, "html.parser")
    news_items = []

    # 尋找新聞列表容器 (根據馬會網頁結構調整)
    # 注意：馬會結構有時會變動，需定期檢查 selector
    articles = soup.select(".news_table tr") 

    for article in articles[:10]:  # 只取前 10 條
        title_tag = article.select_one("a")
        date_tag = article.select_one(".date")
        
        if title_tag:
            title = title_tag.get_text(strip=True)
            link = "https://racing.hkjc.com" + title_tag['href']
            date = date_tag.get_text(strip=True) if date_tag else datetime.now().strftime("%d/%m/%Y")
            
            news_items.append({
                "title": title,
                "link": link,
                "date": date,
                "source": "HKJC"
            })
    
    return news_items

# 執行並印出結果
if __name__ == "__main__":
    results = scrape_hkjc_news()
    for news in results:
        print(f"[{news['date']}] {news['title']}\n連結: {news['link']}\n")
